{% extends "layout.twig" %}

{% set title="Testing Pays" %}
{% block content %}

  <div class="col-sm-10">

    <div class="col-sm-8">
      <div class="row margin-top">
        <div class="col-sm-10">
          <h2>Checkout</h2>
          <hr width="100%" style="border-top: 1px solid black; align:left">
        </div>
      </div>
      <div class="row">
        <div class="col-sm-10">
          <form id="checkout-form" class="form-horizontal">

            <div class="form-group">
              <label for="card-holder" class="control-label col-sm-3">Firstname</label>
              <div class="col-sm-6">
                <input class="form-control" name="cardHolder" placeholder="John" value="John">
              </div>
            </div>

            <div class="form-group">
              <label for="card-holder" class="control-label col-sm-3">Lastname</label>
              <div class="col-sm-6">
                <input class="form-control" name="cardHolder" placeholder="Doe" value="Doe">
              </div>
            </div>

            <div class="form-group">
              <label for="card-Number" class="control-label col-sm-3">Card Number</label>
              <div class="col-sm-6">
                <input class="form-control" name="cardNumber" placeholder="e.g. 4319 5046 8156 3245" value="4263970000005262">
              </div>
            </div>

            <div class="form-group">
              <label for="expiry-date" class="control-label col-sm-3">Expiry Month</label>
              <div class="col-sm-2">
                <input class="form-control" name="expiry-month" placeholder="MM" value="06">
              </div>
              <label for="expiry-date" class="control-label col-sm-2">Expiry Year</label>
              <div class="col-sm-2">
                <input class="form-control" name="expiry-year" placeholder="YYYY" value="2021">
              </div>
            </div>

            <div class="form-group">
              <label for="cvv" class="control-label col-sm-3">CVV</label>
              <div class="col-sm-2">
                <input class="form-control" name="cvv" placeholder="000" value="222">
              </div>
            </div>

            <div class="form-group">
              <label for="total" class="control-label col-sm-3">Total</label>
              <div class="col-sm-1 control-label">
                <b>${{total}}</b>
              </div>
            </div>

            <hr>

            <div class="form-group">
              <div class="col-sm-3"></div>
              <div class="col-sm-6">
                <button id="checkout" type="button" class="btn btn-primary btn-block">Checkout</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="row margin-top">
        <div class="col-sm-12">
          <h2>Responses</h2>
          <hr width="100%" style="border-top: 1px solid black">
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <div id="responses"></div>
        </div>
      </div>
    </div>

  </div>

{% endblock %}
